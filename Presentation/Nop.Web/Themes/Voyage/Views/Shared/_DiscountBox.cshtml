        $(function() {
            $('#discountcouponcode').on('keydown', function (event) {
                if (event.keyCode == 13) {
                    $('#applydiscountcouponcode').trigger("click");
                    return false;
                }
            });
        });
    </script> *@

    <script asp-location="Footer">
        $(function () {

            // Enter tuşu ile apply
            $('#discountcouponcode').on('keydown', function (event) {
                if (event.keyCode == 13) {
                    $('#applydiscountcouponcode').trigger("click");
                    return false;
                }
            });

            // Toggle open/close
            $('.ls-promo-toggle').on('click', function () {
                var $panel = $('#ls-promo-panel');
                var isOpen = !$panel.is('[hidden]');

                $(this).attr('aria-expanded', (!isOpen).toString());

                if (isOpen) {
                    $panel.attr('hidden', 'hidden');
                } else {
                    $panel.removeAttr('hidden');
                    $('#discountcouponcode').focus();
                }
            });

            // Eğer kupon zaten uygulanmışsa panel otomatik açık kalsın
            var hasApplied = $('.coupon-box .current-code').length > 0;
            if (hasApplied) {
                $('.ls-promo-toggle').attr('aria-expanded', 'true');
                $('#ls-promo-panel').removeAttr('hidden');
            }
        });
    </script>
}