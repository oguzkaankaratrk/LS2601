                        </svg>
                        <a href="mailto:@T("Footer.Contact.Mail")">@T("Footer.Contact.Mail")</a>
                    </li>
                </ul>


            </div>
            <div class="footer-block">
                <div class="title">
                    <strong>@T("Footer.Support.Main")</strong>
                </div>
                <ul class="list">

                    <li><a href="@(Url.RouteUrl<Topic>(new { SeName = "faq" }))">@T("Footer.Support.Faq")</a></li>
                    <li><a href="@(Url.RouteUrl<Topic>(new { SeName = "help" }))">@T("Footer.Support.Help")</a></li>
                    <li><a href="@Url.RouteUrl("ApplyVendorAccount")">@T("Footer.Support.Vendor")</a></li>
                    <li><a href="@Url.RouteUrl("ContactUs")">@T("Footer.Support.Feedback")</a></li>
                    @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn2).ToList())
                    {
                        <li><a href="@(Url.RouteUrl<Topic>(new { SeName = topic.SeName }))">@topic.Name</a></li>
                    }
                    @if (Model.DisplayContactUsFooterItem)
                    {
                        <li><a href="@Url.RouteUrl("ContactUs")">@T("Footer.Support.Contactus")</a></li>
                    }
                    @if (Model.ForumEnabled && Model.DisplayForumsFooterItem)
                    {
                        <li><a href="@Url.RouteUrl("Boards")">@T("Forum.Forums")</a></li>
                    }
                </ul>
            </div>
            <div class="footer-block">
                <div class="title">
                    <strong>@T("Footer.Discover.Main")</strong>
                </div>
                <ul class="list">
                    @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn3).ToList())
                    {
                        <li><a href="@(Url.RouteUrl<Topic>(new { SeName = topic.SeName }))">@topic.Name</a></li>
                    }
                    @if (Model.NewProductsEnabled && Model.DisplayNewProductsFooterItem)
                    {
                        <li><a href="@Url.RouteUrl("NewProducts")">@T("Footer.Discover.NewArrivals")</a></li>
                    }
                    <li><a class="view-all" href="@Url.RouteUrl("Category", new { SeName = "top-offers" })">@T("Footer.Discover.TopOffers")</a></li>
                    <li><a class="view-all" href="@Url.RouteUrl("Category", new { SeName = "editors-picks" })">@T("Footer.Discover.EditorPicks")</a></li>

                    @if (Model.RecentlyViewedProductsEnabled && Model.DisplayRecentlyViewedProductsFooterItem)
                    {
                        <li><a href="@Url.RouteUrl("RecentlyViewedProducts")">@T("Footer.Discover.RecentlyViewed")</a></li>
                    }
                    @if (Model.CompareProductsEnabled && Model.DisplayCompareProductsFooterItem)
                    {
                        <li><a href="@Url.RouteUrl("CompareProducts")">@T("Footer.Discover.CompareProducts")</a></li>
                    }
                    @if (Model.SearchEnabled && Model.DisplayProductSearchFooterItem)
                    {
                        <li><a href="@Url.RouteUrl("ProductSearch")">@T("Footer.Discover.SearchProducts")</a> </li>
                    }
                </ul>
            </div>
            <div class="footer-block">
                @* <div class="title">
                    @T("Footer.WeAccept")
                </div>
                <ul class="list">
                    <li>
                        <img class="img footer-accepted-pay" src="@Url.Content($"~/Themes/Voyage/Content/svg/footer/footer-accepts.svg")" alt="" title="">
                    </li>
                </ul> *@
                <div class="title accept">
                    <strong>@T("Footer.Lion.LionApp")</strong>
                </div>
                <ul class="list">
                    <li>
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="30" fill="currentColor" class="bi bi-apple" viewBox="0 0 16 16">
                            <path d="M11.182.008C11.148-.03 9.923.023 8.857 1.18c-1.066 1.156-.902 2.482-.878 2.516s1.52.087 2.475-1.258.762-2.391.728-2.43m3.314 11.733c-.048-.096-2.325-1.234-2.113-3.422s1.675-2.789 1.698-2.854-.597-.79-1.254-1.157a3.7 3.7 0 0 0-1.563-.434c-.108-.003-.483-.095-1.254.116-.508.139-1.653.589-1.968.607-.316.018-1.256-.522-2.267-.665-.647-.125-1.333.131-1.824.328-.49.196-1.422.754-2.074 2.237-.652 1.482-.311 3.83-.067 4.56s.625 1.924 1.273 2.796c.576.984 1.34 1.667 1.659 1.899s1.219.386 1.843.067c.502-.308 1.408-.485 1.766-.472.357.013 1.061.154 1.782.539.571.197 1.111.115 1.652-.105.541-.221 1.324-1.059 2.238-2.758q.52-1.185.473-1.282" />
                            <path d="M11.182.008C11.148-.03 9.923.023 8.857 1.18c-1.066 1.156-.902 2.482-.878 2.516s1.52.087 2.475-1.258.762-2.391.728-2.43m3.314 11.733c-.048-.096-2.325-1.234-2.113-3.422s1.675-2.789 1.698-2.854-.597-.79-1.254-1.157a3.7 3.7 0 0 0-1.563-.434c-.108-.003-.483-.095-1.254.116-.508.139-1.653.589-1.968.607-.316.018-1.256-.522-2.267-.665-.647-.125-1.333.131-1.824.328-.49.196-1.422.754-2.074 2.237-.652 1.482-.311 3.83-.067 4.56s.625 1.924 1.273 2.796c.576.984 1.34 1.667 1.659 1.899s1.219.386 1.843.067c.502-.308 1.408-.485 1.766-.472.357.013 1.061.154 1.782.539.571.197 1.111.115 1.652-.105.541-.221 1.324-1.059 2.238-2.758q.52-1.185.473-1.282" />
                        </svg>
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="30" fill="currentColor" class="bi bi-google-play" viewBox="0 0 16 16">
                            <path d="M14.222 9.374c1.037-.61 1.037-2.137 0-2.748L11.528 5.04 8.32 8l3.207 2.96zm-3.595 2.116L7.583 8.68 1.03 14.73c.201 1.029 1.36 1.61 2.303 1.055zM1 13.396V2.603L6.846 8zM1.03 1.27l6.553 6.05 3.044-2.81L3.333.215C2.39-.341 1.231.24 1.03 1.27" />
                        </svg>
                    </li>
                </ul>

                <div class="title accept">
                    <strong>@T("Footer.Lion.Social")<strong />
                </div>
                @await Component.InvokeAsync(typeof(SocialButtonsViewComponent))
            </div>

        </div>
    </div>
    <div class="footer-lower">
        <div class="footer-texts">
            @* TODO(BC)-LOCALIZATION:Localize Yapılacak *@
            <div class="footer-text copyright">
                <span class="txt footer-disclaimer">@T("Content.CopyrightNotice", DateTime.Now.Year, Model.StoreName) <a href="@(OfficialSite.Main)" target="_blank" @(Model.IsHomePage ? string.Empty : "rel=nofollow")>LionShop</a></span>
            </div>
            <div class="footer-text payment">
                @if (Model.DisplayTaxShippingInfoFooter)
                {
                    var inclTax = await workContext.GetTaxDisplayTypeAsync() == TaxDisplayType.IncludingTax;
                    <div class="txt footer-tax-shipping">
                        @T(inclTax ? "Footer.TaxShipping.InclTax" : "Footer.TaxShipping.ExclTax", Url.RouteTopicUrl("shippinginfo"))
                    </div>
                }
            </div>

            <div class="footer-text topic">
                @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn1).ToList())
                {
                    <span class="text-white"> <a href="@(Url.RouteUrl<Topic>(new { SeName = topic.SeName }))">@topic.Name</a> &nbsp;</span>
                }
            </div>

        </div>
        @await Component.InvokeAsync(typeof(StoreThemeSelectorViewComponent))
    </div>
    @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.Footer, additionalData = Model })
</div>